{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "globalDependencies": [".env"],
  "tasks": {
    "build": {
      "dependsOn": ["^build", "^db:generate", "^types:build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": ["build/**", "dist/**", "public/**"],
      "env": ["VITE_APP_API_URL", "DATABASE_URL", "VITE_BETTER_AUTH_URL"]
    },
    "dev": {
      "dependsOn": ["^db:generate", "^types:build"],
      "cache": false,
      "persistent": true
    },
    "lint": {
      "dependsOn": ["^lint"],
      "outputs": []
    },
    "check-types": {
      "dependsOn": ["^check-types"],
      "outputs": []
    },
    "db:generate": {
      "cache": false,
      "outputs": []
    },
    "db:migrate": {
      "cache": false,
      "persistent": true,
      "outputs": []
    },
    "db:build": {
      "cache": false,
      "outputs": []
    },
    "db:dev": {
      "cache": false,
      "persistent": true
    },
    "db:deploy": {
      "cache": false,
      "outputs": []
    },
    "deploy": {
      "dependsOn": ["build"],
      "outputs": []
    },
    "types:build": {
      "dependsOn": ["^db:generate"],
      "cache": false,
      "outputs": []
    },
    "auth:build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**"]
    }
  }
}
